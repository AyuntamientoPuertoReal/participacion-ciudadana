<table class="hover">
      <thead>
        <tr>
          <th width="25">Fecha</th>
          <th width="50">Titulo</th>
          <th width="50">Autor</th>
          <th width="50">Publicado</th>
          <th width="50">Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @news.each do |new| %>
        <tr id="<%= new.id %>">
          <td><%= new.created_at.strftime("%d/%m/%Y %R") %></td>
          <td><%= new.title %></td>
          <td><%= @author_name[new.author_id] %></td>
          <td>
            <% if new.published %>
              Si
            <% else %>
              No
            <% end %>
          </td>
          <td>
            <div class="grid-x grid-margin-x small-up-1 medium-up-1 large-up-3">
              <div class="cell">
                <% if @user_role == 1 || @user_role == 2 || new.author_id == @current_user.id %>
                  <%= link_to "Detalles", edit_news_path(new), class: "button primary" %>
                <% else %>
                  <%= link_to "Detalles", news_path(new), class: "button primary" %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>