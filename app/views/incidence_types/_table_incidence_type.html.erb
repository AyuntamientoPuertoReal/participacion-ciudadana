<table class="hover">
  <thead>
    <tr>
      <th width="50"><%= t("tags.order") %></th>
      <th width="50"><%= t("tags.code") %></th>
      <th width="50"><%= t("tags.name") %></th>
      <th width="200"><%= t("tags.description") %></th>
      <th width="50"><%= t("tags.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% @incidence_types.each do |incidence_type| %>
    <tr id="<%= incidence_type.id %>" name="<%= incidence_type.order %>">
      <td>
        <div class="grid-y grid-margin-y">
          <a href="/incrementorder/<%= incidence_type.id %>" data-remote="true"><i class="fi-arrow-up cell" ></i></a>
          <a href="/decrementorder/<%= incidence_type.id %>" data-remote="true"><i class="fi-arrow-down cell" ></i></a>
        </div>
      </td>
      <td><%= incidence_type.code %></td>
      <td><%= incidence_type.name %></td>
      <td><%= incidence_type.description %></td>
      <td>
        <div class="grid-x grid-margin-x small-up-1 medium-up-1 large-up-3">
          <div class="cell">
            <%= link_to t("button_text.details"), edit_incidence_type_path(incidence_type), class: "button primary" %>
          </div>

          <div class="cell">
            <a class="button alert" data-open="ModalEliminar_<%= incidence_type.id %>"><%= t("button_text.delete") %></a>     
              <div class="small reveal" id="ModalEliminar_<%= incidence_type.id %>" data-reveal>
                <h3 class="text-center"><%= t("modals.delete.message") %></h3>
                <div class="grid-x">
                  <div class="cell large-2 medium-2 small-2 large-offset-2 mediun-offset-2 small-offset-2">
                    <a class="button success" type="button" rel="nofollow" data-method="delete" href="<%= incidence_type_path(incidence_type.id) %>" data-close><%= t("general.accept") %></a>
                  </div>
                  
                  <div class="cell large-2 medium-2 small-2 large-offset-3 mediun-offset-3 small-offset-3">
                    <a class="button alert" type="button" data-close><%= t("general.cancel") %></a>
                  </div>
                </div>
              </div>
           </div>
           
        </div>
      </td>
    <tr>
  <% end %>
  </tbody>
</table>