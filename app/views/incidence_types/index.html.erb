<div class="grid-container">
  <div class="grid-x grid-margin-x small-up-3 medium-up-3 large-up-5">
      <div class="cell">
        <label>
          Codigo
          <input type="text" placeholder="Descripcion">
        </label>
      </div>
    
      <div class="cell">
        <label>
          Nombre
          <input type="text" placeholder="Nombre">
        </label>
      </div>
    
      <div class="cell">  
        <label>
          Descripcion
          <input type="text" placeholder="Descripcion">
        </label>
      </div>
    
      <div class="cell large-offset-2">
        <%= link_to "Nuevo Tipo", new_incidence_type_path, class: "button success" %>
      </div>
  </div>
  
  <div class="grid-x grid-margin-x">
    <table class="hover">
      <thead>
        <tr>
          <th width="50">Orden</th>
          <th width="50">Codigo</th>
          <th width="50">Nombre</th>
          <th width="200">Descripcion</th>
          <th width="50">Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @incidence_types.each do |incidence_type| %>
        <tr id="<%= incidence_type.order %>" name="incidenceTypes_<%= incidence_type.id %>">
          <td>
            <div class="grid-y grid-margin-y">
              <a href="#"><i class="fi-arrow-up cell"></i></a>
              <a href="#"><i class="fi-arrow-down cell"></i></a>
            </div>
          </td>
          <td><%= incidence_type.code %></td>
          <td><%= incidence_type.name %></td>
          <td><%= incidence_type.description %></td>
          <td>
            <div class="grid-x grid-margin-x small-up-1 medium-up-1 large-up-3">
              <div class="cell">
                <%= link_to "Detalles", edit_incidence_types_path(incidence_type), class: "button primary" %>
              </div>
            </div>
          </td>
        <tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>