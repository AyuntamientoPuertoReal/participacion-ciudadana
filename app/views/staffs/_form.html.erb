<%= form_with(model: @staff, local: true) do |f| %>
<div class="grid-y">
  <div class="grid-x">
      <div class="large-12 medium-12 small-12">
        <h3 class="text-center"><%= t("field_form.date_tag", deep_interpolation: true, element: t("field_form.staff")) %> </h3>
      </div>
  </div>

  <div class="grid-x">
    <div class="large-2 medium-2 small-2 large-offset-2 medium-offset-2 small-offset-2">
    <%= f.label t("tags.full_name") %>
    <%= f.text_field :full_name %>

    <%= f.label t("tags.code") %>
    <%= f.text_field :username %>

    <%= f.label t("tags.email") %>
    <%= f.email_field :email %>
    </div>

    <div class="large-2 medium-2 small-2 large-offset-4 medium-offset-4 small-offset-4">
        <%= f.label t("tags.password") %>
        <%= f.password_field :password %>

        <%= f.label t("tags.repeat_password") %>
        <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="grid-x">
    <div class="large-2 medium-2 small-2 large-offset-2 medium-offset-2 small-offset-2">
        <fieldset class="large-6 cell">
          <legend><%= t("tags.web_editor") %></legend>
          <div class="grid-x">
                <%= f.radio_button :is_web_editor, true %>
                <%= f.label t("general.yes_option") %>
          </div>

          <div class="grid-x">
                <%= f.radio_button :is_web_editor, false %>
                <%= f.label t("general.no_option") %>
          </div>
        </fieldset>
    </div>

    <div class="large-3 medium-3 small-3 large-offset-1 medium-offset-1 small-offset-1">
      <fieldset class="large-6 cell">
        <legend><%= t("tags.role") %></legend>
        <div class="grid-x">
          <%= f.radio_button :role_id, Role.find(3).id, :checked => true %>
          <%= f.label t("tags.none") %>
        </div>

        <div class="grid-x">
          <%= f.radio_button :role_id, Role.find(1).id %>
          <%= f.label t("tags.admin") %>
        </div>

        <div class="grid-x">
          <%= f.radio_button :role_id, Role.find(2).id %>
          <%= f.label t("tags.supervisor") %>
        </div>
      </fieldset>
    </div>

    <div class="large-2 medium-2 small-2">
        <fieldset class="large-6 cell">
          <legend><%= t("tags.publish") %></legend>
          <div class="grid-x">
            <%= f.radio_button :can_publish, true %>
            <%= f.label t("general.yes_option") %>
          </div>

          <div class="grid-x">
            <%= f.radio_button :can_publish, false %>
            <%= f.label t("general.no_option") %>
          </div>
        </fieldset>
    </div>
  </div>

  <div class="grid-x large-offset-6 medium-offset-6 small-offset-6">
    <%= f.submit t("button_text.save"), class: "button primary" %>
  </div>

<% if @edit %>
  <div class="grid-y">
    <div class="grid-x">
      <div class="large-12 medium-12 small-12">
        <h4 class="text-center"><%= t("field_form.processing_unit") %></h4>
        <p class="text-center"><%= t("field_form.table_text") %></p>
      </div>
    </div>

    <div class="grid-x">
      <div class="grid-y large-2 medium-2 small-2 large-offset-3 medium-offset-3 small-offset-3">
        
        <div class="cell">
          <p class="text-center"><%= t("general.avaible") %></p>

          <table id="procUnit_table_disponible" class="hover">
            <thead>
              <tr>
                <th width="25"><%= t("tags.select") %></th>
                <th width="75"><%= t("tags.unit") %></th>
              </tr>
            </thead>
            <tbody>
            <% @processing_unit_all.each do |proc_unit| %>
              <tr id="procUnit_disponible_<%= proc_unit.id %>">
                <td><input type="checkbox"/></td>
                <td><%= proc_unit.code %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>

      <div class="large-2 medium-2 small-2">
        <div class="grid-y cell large-offset-6 medium-offset-6 small-offset-6">
          <a href="/assign_staff/<%= staff.id %>" data-remote="true"><i class="fi-arrow-right"></i></a>
          <a href="/unassign_staff/<%= staff.id %>" data-remote="true"><i class="fi-arrow-left"></i></a>
        </div>
      </div>

      <div class="grid-y large-2 medium-2 small-2">

        <div class="cell">
          <p class="text-center"><%= t("general.selected") %></p>

          <table id="procUnit_table_asignado" class="hover">
            <thead>
              <tr>
                <th width="25"><%= t("tags.select") %></th>
                <th width="75"><%= t("tags.unit") %></th>
              </tr>
            </thead>
            <tbody>
            <% @processing_unit_ps_array.each do |proc_unit| %>
              <tr id="procUnit_asignado_<%= proc_unit.id %>">
                <td><input type="checkbox"/></td>
                <td><%= proc_unit.code %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
<% end %>
</div>
<% end %>


  
    
    



  
