<div class="grid-container">
  <div class="grid-x">
    <div class="grid-x grid-margin-x large-8 medium-8 small-8">
      <%= form_with method: :get, url: staffs_path, id: 'staffs_search', class: "grid-margin-x small-up-1 medium-up-4 large-up-1" do |f| %>
        <div class="cell">
            <%= f.label :search_code, t("tags.code") %>
            <%= f.text_field :search_code, value: params[:search_code] %>
        </div>

        <div class="cell">
            <%= f.label :search_name, t("tags.full_name") %>
            <%= f.text_field :search_name, value: params[:search_name] %>
        </div>

        <div class="cell">
            <%= f.label :search_ut, t("tags.processing_unit_seach") %>
            <%= f.select :search_ut, options_from_collection_for_select(@ut_code, :first, :last, 0), select: params[:search_ut] %>
        </div>
      <% end %>
    </div>
    <div class="grid-x">
      <div class="cell">
        <%= link_to t("button_text.staff_new"), new_staff_path, class: "button success" %>
      </div>
    </div>
  </div>

  <div class="grid-x grid-margin-x" id="staffs">
    <%= render 'table_staffs' %>
  </div>
</div>
